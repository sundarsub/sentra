#!/bin/bash
# Simple email sender for Sentra/OpenClaw
# Usage: send-email <to> <subject> <body>

TO="$1"
SUBJECT="$2"
BODY="$3"

if [ -z "$TO" ] || [ -z "$SUBJECT" ] || [ -z "$BODY" ]; then
    echo "Usage: send-email <to> <subject> <body>"
    exit 1
fi

# Get sender from environment or use default
FROM="${EMAIL_FROM:-sentra@lma.llc}"

cat << MSGEOF | himalaya template send
From: $FROM
To: $TO
Subject: $SUBJECT

$BODY
MSGEOF
